<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  
  <div class="form-inputs">
    <%= f.input :department_id, :collection => Department.all(:order => 'name'), :label_method => :name, :value_method => :id, :include_blank => true %>
  </div>
  
  <div class="form-inputs">
    <%= f.input :responsible %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>
