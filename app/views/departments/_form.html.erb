<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  
  <div class="form-inputs">
    <%= f.association :enterprise, :label_method => :name %>
  </div>
  
  <div class="form-inputs">
    <%= f.association :employee, :label_method => :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>
